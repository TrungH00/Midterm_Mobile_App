<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.quanlychitieu"
    android:versionCode="7"
    android:versionName="1.01" >

    <uses-sdk
        android:minSdkVersion="23"
        android:targetSdkVersion="26" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.quanlychitieu.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <provider
            android:name="com.example.quanlychitieu.database.DataProvider"
            android:authorities="com.example.quanlychitieu.dataprovider"
            android:exported="false" />

        <activity
            android:name="com.example.quanlychitieu.SplashScreen"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.quanlychitieu.SettingAccountsActivity"
            android:label="Add Accounts"
            android:parentActivityName="com.example.quanlychitieu.ShowingAccountsActivity" />
        <activity
            android:name="com.example.quanlychitieu.ShowingAccountsActivity"
            android:label="My Accounts"
            android:parentActivityName="com.example.quanlychitieu.MainActivity" />
        <activity
            android:name="com.example.quanlychitieu.BudgetActivity"
            android:label="Budget"
            android:parentActivityName="com.example.quanlychitieu.MainActivity" />
        <activity
            android:name="com.example.quanlychitieu.ShowingExpensesActivity"
            android:label="Expense"
            android:parentActivityName="com.example.quanlychitieu.MainActivity" />
        <activity
            android:name="com.example.quanlychitieu.AddingExpenseActivity"
            android:label="Add Expense"
            android:parentActivityName="com.example.quanlychitieu.MainActivity" />
        <activity
            android:name="com.example.quanlychitieu.AddingIncomeActivity"
            android:label="Add Income"
            android:parentActivityName="com.example.quanlychitieu.ShowingIncomeActivity" />
        <activity
            android:name="com.example.quanlychitieu.ShowingIncomeActivity"
            android:label="Income"
            android:parentActivityName="com.example.quanlychitieu.MainActivity" />
        <activity
            android:name="com.example.quanlychitieu.ShowingExpensesDetailActivity"
            android:label="Expense Detail"
            android:parentActivityName="com.example.quanlychitieu.ShowingExpensesActivity" />
        <activity
            android:name="com.example.quanlychitieu.ShowingIncomeDetailActivity"
            android:label="Income Detail"
            android:parentActivityName="com.example.quanlychitieu.ShowingIncomeActivity" />
        <activity
            android:name="com.example.quanlychitieu.TransferActivity"
            android:label="@string/transfer"
            android:parentActivityName="com.example.quanlychitieu.MainActivity" />
        <activity
            android:name="com.example.quanlychitieu.IncomeCategoryActivity"
            android:label="Income Category"
            android:parentActivityName="com.example.quanlychitieu.MainActivity" />
        <activity
            android:name="com.example.quanlychitieu.ShowingCreditActivity"
            android:label="Credit Cards"
            android:parentActivityName="com.example.quanlychitieu.MainActivity" />
        <activity
            android:name="com.example.quanlychitieu.AddingCreditActivity"
            android:label="Adding Cards"
            android:parentActivityName="com.example.quanlychitieu.ShowingCreditActivity" />
        <activity
            android:name="com.example.quanlychitieu.ShowingCreditDetailActivity"
            android:label="Credit Detail"
            android:parentActivityName="com.example.quanlychitieu.ShowingCreditActivity" />
        <activity
            android:name="com.example.quanlychitieu.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.quanlychitieu.PreferencesActivity"
            android:label="Settings"
            android:parentActivityName="com.example.quanlychitieu.MainActivity" />
        <activity
            android:name="com.example.quanlychitieu.RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="android.support.VERSION"
            android:value="26.1.0" /> <!-- Include the AdActivity and InAppPurchaseActivity configChanges and themes. -->
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:exported="false"
            android:theme="@android:style/Theme.Translucent" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="android.arch.lifecycle.VERSION"
            android:value="27.0.0-SNAPSHOT" />
    </application>

</manifest>